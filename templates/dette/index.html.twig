





{% extends 'base.html.twig' %}
<h1>Liste des dettes</h1>

<form method="get" action="{{ path('dettes_list') }}">
    <div>
        <label><input type="checkbox" name="statut[]" value="en_attente"> En attente</label>
        <label><input type="checkbox" name="statut[]" value="payee"> Payée</label>
        <label><input type="checkbox" name="statut[]" value="annulee"> Annulée</label>
    </div>
    <button type="submit">Filtrer</button>
</form>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Montant</th>
            <th>Description</th>
            <th>Date de création</th>
            <th>Statut</th>
        </tr>
    </thead>
    <tbody>
        {% for dette in dettes %}
            <tr>
                <td>{{ dette.id }}</td>
                <td>{{ dette.montant }}</td>
                <td>{{ dette.description }}</td>
                <td>{{ dette.createAt|date('Y-m-d H:i') }}</td>
                <td>{{ dette.statut }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune dette trouvée</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
